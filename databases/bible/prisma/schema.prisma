datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Version {
    id          Int     @id @default(autoincrement())
    name        String  @unique
    tag         String  @unique // abbreviation of the name
    description String?
    author      String?
    copyright   String?
    locale      String // en-US, ta-IN, ml-IN, ...
    direction   String  @default("ltr") // ltr, rtl
    revision    Int     @default(0)
    books       Book[]

    @@map(name: "versions")
}

model Book {
    id          Int       @id @default(autoincrement())
    name        String    @unique
    tag         String    @unique // common across all locales
    description String?
    chapters    Chapter[]
    verses      Verse[]

    version   Version @relation(fields: [versionId], references: [id])
    versionId Int

    @@map(name: "books")
}

model Chapter {
    id          Int     @id @default(autoincrement())
    serial      Int // chapter num
    description String?

    book   Book @relation(fields: [bookId], references: [id])
    bookId Int

    verses Verse[]

    @@map(name: "chapters")
}

model Verse {
    id     Int @id @default(autoincrement())
    serial Int // verse num

    content String // the actual verse content
    note    String? // some notes about the verse

    chapter   Chapter @relation(fields: [chapterId], references: [id])
    chapterId Int

    book   Book @relation(fields: [bookId], references: [id])
    bookId Int

    @@map(name: "verses")
}
