{
  "name": "reverseview",
  "version": "8.5.0",
  "description": "Rebirth of the old-school VerseVIEW 8",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "browserslist": [
    "ie 10"
  ],
  "scripts": {
    "dev": "pnpm run build && pnpm run debug",
    "debug": "adl -profile extendedDesktop ./application.xml ./app",
    "start": "adl -profile extendedDesktop -nodebug ./application.xml ./app",
    "build": "pnpm run build:src && pnpm run build:styles",
    "build:src": "tsc -p tsconfig.app.json",
    "build:as3": "asconfigc -p as3 --sdk \"D:/AirSDK/32.0.0.116\"",
    "build:swf": "amxmlc -output app/bin/AppEntry.swf as3/src/AppEntry.as",
    "build:styles": "node build.styles.js",
    "watch:src": "tsc -p tsconfig.app.json --watch",
    "clean": "rimraf -g \"app/js/**/*.js\" \"app/css/**/*.css\" \"app/*.css\" \"dist/*.air\"",
    "package": "pnpm run build && node tools/releng/package.js"
  },
  "devDependencies": {
    "@types/jquery": "^3.5.30",
    "@types/node": "^20.14.14",
    "@types/sizzle": "^2.3.4",
    "@types/yui": "^3.14.31",
    "@types/dojo": "^1.9.48",
    "@types/lodash": "^4.17.7",
    "rimraf": "^6.0.1",
    "dojo-dstore": "^1.2.1",
    "lodash": "^4.17.21",
    "almond": "^0.3.3",
    "cajon": "^0.4.4",
    "asconfigc": "^1.8.1",
    "prim": "^1.0.0",
    "alloy-ui": "^3.1.0-deprecated.83",
    "autoprefixer": "^10.4.20",
    "axios": "^1.7.3",
    "cssnano": "^7.0.4",
    "dijit": "^1.17.3",
    "dojo": "^1.17.3",
    "dojox": "^1.17.3",
    "glob": "^11.0.0",
    "ignore": "^5.3.1",
    "jquery": "^3.7.1",
    "map.groupby": "^1.0.3",
    "postcss": "^8.4.41",
    "postcss-alias": "^2.0.0",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "postcss-load-config": "^6.0.1",
    "postcss-nested": "^6.2.0",
    "postcss-preset-env": "^10.0.0",
    "preact": "^10.23.1",
    "recache": "^0.6.0",
    "sass": "^1.77.8",
    "stylelint": "^16.8.1",
    "tailwindcss": "^3.4.9",
    "teoria": "^2.5.0",
    "tslib": "^2.6.3",
    "typescript": "~5.4.5",
    "yui": "^3.18.1"
  }
}
