{
  "compilerOptions": {
    "target": "ES5",
    "importHelpers": true,
    "noEmitHelpers": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "module": "ESNext",
    "moduleResolution": "Node",
    "sourceMap": false,
    "allowJs": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@lib/*": ["lib/*"],
      "@app/*": ["app/*"],
      "@core/*": ["core/*"],
      "@stores/*": ["stores/*"],
      "@components/*": ["ui/components/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js",
    "./src/**/*.tsx",
    "./src/**/*.jsx",
  ],
}