{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    /* Language and Environment */
    "ignoreDeprecations": "5.0",
    "target": "ES3",
    "jsx": "react-jsx",
    "jsxImportSource": "@lib/zrx",

    /* Modules */
    "module": "UMD", // out loader is AMD
    "rootDir": "./src",
    "baseUrl": "./src",
    "moduleResolution": "Node",
    "paths": {
      "@lib/*": ["lib/*"],
      "@app/*": ["app/*"]
    },
    "typeRoots": [
//      "types",
    ],
    "lib": [
//      "ES5",
//      "DOM",
      "ScriptHost", // maps to "@typescript/lib-scripthost" -> "@rvw/air-types"
//      "ES2015.Promise",
    ],
    "allowUmdGlobalAccess": true,
//    "resolveJsonModule": true,

    /* JavaScript Support */
    "allowJs": true,
//    "checkJs": true,

    /* Emit */
    "outDir": "./.air/js",
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js",
    "./src/**/*.tsx",
    "./src/**/*.jsx",
    "./src/**/*.json",
  ],
  "exclude": ["node_modules"]
}