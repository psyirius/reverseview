{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    /* Language and Environment */
    "ignoreDeprecations": "5.0",
    "target": "ES3",
    "jsx": "react-jsx",
    "jsxImportSource": "@lib/zrx",

    /* Modules */
    "module": "UMD", // our loader is AMD
    "rootDir": "./src",
    "baseUrl": "./src",
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["./*"],
      "@lib/*": ["lib/*"],
      "@app/*": ["app/*"],
      "@core/*": ["core/*"],
      "@stores/*": ["stores/*"],
      "@components/*": ["ui/components/*"],
    },
    "typeRoots": [],
    "lib": [
      "ScriptHost", // resolves to "@typescript/lib-scripthost" -> "@rvw/air-types"
    ],
    "allowUmdGlobalAccess": true,
//    "resolveJsonModule": true,

    /* JavaScript Support */
    "allowJs": true,
//    "checkJs": true,

    /* Emit */
    "outDir": "./.air/js",
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js",
    "./src/**/*.tsx",
    "./src/**/*.jsx",
    "./src/**/*.json",
  ],
  "exclude": ["node_modules"]
}