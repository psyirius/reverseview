{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    /* Language and Environment */
    "ignoreDeprecations": "5.0",
    "target": "ES3",
    "jsx": "react-jsx",
    "jsxImportSource": "@lib/zrx",

    /* Modules */
    "module": "UMD", // out loader is AMD
    "rootDir": "./src",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "paths": {
      "@lib/*": ["lib/*"],
      "@app/*": ["app/*"]
    },
    "typeRoots": [
      "./types",
      "node_modules/@types"
    ],
//    "lib": [
//
//    ],
    "allowUmdGlobalAccess": true,
//    "resolveJsonModule": true,

    /* JavaScript Support */
    "allowJs": true,
//    "checkJs": true,

    /* Emit */
    "outDir": "./app/js",
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js",
    "./src/**/*.tsx",
    "./src/**/*.jsx",
    "./src/**/*.json",
  ],
  "exclude": ["node_modules"]
}