{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "@rvw/desktop#build": {
      "dependsOn": [
        "@rvw/flash-bootloader#build",
        "@rvw/flash-support#build",
        "@rvw/remote#build"
      ]
    },
    "@rvw/desktop#dev": {
      "dependsOn": [
        "@rvw/flash-bootloader#build",
        "@rvw/flash-support#build",
        "@rvw/remote#build"
      ],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "clean": {
      "dependsOn": ["^clean"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
